<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.hairtouch.hairtouch_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ShopActivity"
            android:label="@string/title_activity_shop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ShopDetailActivity"
            android:label="@string/title_activity_shop_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DesignerActivity"
            android:label="@string/title_activity_designer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DesignerDetailActivity"
            android:label="@string/title_activity_designer_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HairActivity"
            android:label="@string/title_activity_hair"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
